//registry.npmjs.org/:_authToken=${NPM_TOKEN}
always-auth=true

# Set the registry for your scoped package
@this-is-josh-hansen:registry=https://registry.npmjs.org/

# Save exact versions of dependencies (no ^ or ~)
save-exact=true

# Ensure publishing only happens with the current version in package.json
tag-version-prefix="v"

# Prevent accidental package publication to the wrong registry
unsafe-perm=true

# If you use a custom cache directory
# cache=~/.npm_cache

# Optional: Adjust fetch timeouts (in ms)
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
